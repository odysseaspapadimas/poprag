# https://orm.drizzle.team/docs/guides/postgresql-local-setup
DATABASE_URL=postgresql://postgres:password@localhost:5432/kolm-start
BETTER_AUTH_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Firebase Admin SDK (Server-side only)
# Base64 encoded service account JSON from Firebase Console
# Get from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
# Then run: base64 -i path/to/serviceAccountKey.json | tr -d '\n'
SERVICE_ACCOUNT_DATA=your_base64_encoded_service_account_json

# Firebase Client SDK (Public - safe to expose)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id